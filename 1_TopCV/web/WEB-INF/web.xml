<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/LoginServlet</url-pattern>
    </filter-mapping>
    <!-- Base/Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.base.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestPasswordServlet</servlet-name>
        <servlet-class>controller.base.RequestPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>controller.base.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!-- Jobseeker -->
    <servlet>
        <servlet-name>GoogleLoginServlet</servlet-name>
        <servlet-class>controller.jobseeker.GoogleLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoogleLoginServlet</servlet-name>
        <url-pattern>/googleloginservlet</url-pattern>
    </servlet-mapping>
    <!-- Map Google OAuth callback used by redirect_uri -->
    <servlet-mapping>
        <servlet-name>GoogleLoginServlet</servlet-name>
        <url-pattern>/JobSeeker/jobseeker-login</url-pattern>
    </servlet-mapping>
    <!-- Admin -->
    <servlet>
        <servlet-name>AdminAddAccountServlet</servlet-name>
        <servlet-class>controller.admin.AdminAddAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAddAccountServlet</servlet-name>
        <url-pattern>/adminaddaccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminChangePassword</servlet-name>
        <servlet-class>controller.admin.AdminChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminChangePassword</servlet-name>
        <url-pattern>/adminchangepassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminDeleteAccount</servlet-name>
        <servlet-class>controller.admin.AdminDeleteAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteAccount</servlet-name>
        <url-pattern>/admindeleteaccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminManageAccountServlet</servlet-name>
        <servlet-class>controller.admin.AdminManageAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobSeekerProfileServlet</servlet-name>
        <servlet-class>controller.jobseeker.JobSeekerProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobSeekerJobListServlet</servlet-name>
        <servlet-class>controller.JobSeekerJobListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminManageAccountServlet</servlet-name>
        <url-pattern>/manage-accounts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateAdminProfile</servlet-name>
        <servlet-class>controller.admin.UpdateAdminProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAdminProfile</servlet-name>
        <url-pattern>/updateadminprofile</url-pattern>
    </servlet-mapping>

    
    <servlet>
        <servlet-name>UpdateStaffProfile</servlet-name>
        <servlet-class>controller.staff.UpdateStaffProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStaffProfile</servlet-name>
        <url-pattern>/updatestaffprofile</url-pattern>
    </servlet-mapping>
    <!-- Recruiter (package 'recuiter' in sources) -->
    <servlet>
        <servlet-name>HomeRecuiterServlet</servlet-name>
        <servlet-class>controller.recuiter.HomeRecuiterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeRecuiterServlet</servlet-name>
        <url-pattern>/homerecuiterservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>JobFinalServlet</servlet-name>
        <servlet-class>controller.recuiter.JobFinalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobFinalServlet</servlet-name>
        <url-pattern>/jobfinal</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>JobPostingServlet</servlet-name>
        <servlet-class>controller.recuiter.JobPostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobPostingServlet</servlet-name>
        <url-pattern>/jobposting</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListPostingJobsServlet</servlet-name>
        <servlet-class>controller.recuiter.ListPostingJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListPostingJobsServlet</servlet-name>
        <url-pattern>/listpostingjobsservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPostingJobsServlet</servlet-name>
        <url-pattern>/listpostingjobs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecruitmentProcessServlet</servlet-name>
        <servlet-class>controller.recuiter.RecruitmentProcessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecruitmentProcessServlet</servlet-name>
        <url-pattern>/recruitmentprocessservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobSeekerProfileServlet</servlet-name>
        <url-pattern>/jobseekerprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobSeekerJobListServlet</servlet-name>
        <url-pattern>/jobseekerjoblist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AppliedJobsServlet</servlet-name>
        <servlet-class>controller.jobseeker.AppliedJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppliedJobsServlet</servlet-name>
        <url-pattern>/applied-jobs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SavedJobsServlet</servlet-name>
        <servlet-class>controller.jobseeker.SavedJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SavedJobsServlet</servlet-name>
        <url-pattern>/saved-jobs</url-pattern>
    </servlet-mapping>
    <!-- Candidate Search -->
    <servlet>
        <servlet-name>CandidateSearchServlet</servlet-name>
        <servlet-class>controller.recuiter.CandidateSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateSearchServlet</servlet-name>
        <url-pattern>/candidate-search</url-pattern>
    </servlet-mapping>
    <!-- Candidate Search Profile -->
    <servlet>
        <servlet-name>CandidateSearchProfileServlet</servlet-name>
        <servlet-class>controller.recuiter.CandidateSearchProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateSearchProfileServlet</servlet-name>
        <url-pattern>/candidate-profile</url-pattern>
    </servlet-mapping>
    <!-- Candidate Management -->
    <servlet>
        <servlet-name>CandidateManagementServlet</servlet-name>
        <servlet-class>controller.recuiter.CandidateManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateManagementServlet</servlet-name>
        <url-pattern>/candidate-management</url-pattern>
    </servlet-mapping>
    <!-- Candidate Profile View (from candidate-management) -->
    <servlet>
        <servlet-name>CandidateProfileServlet</servlet-name>
        <servlet-class>controller.recuiter.CandidateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateProfileServlet</servlet-name>
        <url-pattern>/candidate-profile-view</url-pattern>
    </servlet-mapping>
    <!-- Job Management -->
    <servlet>
        <servlet-name>JobManagementServlet</servlet-name>
        <servlet-class>controller.recuiter.JobManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobManagementServlet</servlet-name>
        <url-pattern>/job-management</url-pattern>
    </servlet-mapping>
    <!-- Reset password -->
    <servlet-mapping>
        <servlet-name>RequestPasswordServlet</servlet-name>
        <url-pattern>/requestPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/resetPassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequestPasswordServlet</servlet-name>
        <servlet-class>controller.base.RequestPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>controller.base.ResetPasswordServlet</servlet-class>
    </servlet>

    <!-- Company Culture (JobSeeker) -->
    <servlet>
        <servlet-name>CompanyCultureServlet</servlet-name>
        <servlet-class>controller.jobseeker.CompanyCultureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompanyCultureServlet</servlet-name>
        <url-pattern>/company-culture</url-pattern>
    </servlet-mapping>

        
    <!-- Notification System (JobSeeker) -->
    <servlet>
        <servlet-name>NotificationServlet</servlet-name>
        <servlet-class>controller.jobseeker.NotificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NotificationServlet</servlet-name>
        <url-pattern>/notifications</url-pattern>
    </servlet-mapping>
</web-app>
